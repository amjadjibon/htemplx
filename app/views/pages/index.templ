package pages

import (
    "htemplx/app/views/components"
    "htemplx/app/views/layouts"
)

templ Index(loggedIn bool, title string) {
    @layouts.Base(title) {
        <div id="nav-login">
            @components.Navbar(loggedIn)
            if loggedIn {
                @components.PasteBin()
            } else {
                @components.Login()
            }
        </div>
        @components.NewsLetter()
        @components.Pricing()
        @components.Footer()
    }
}

templ NavPasteBin(loggedIn bool) {
    @components.Navbar(loggedIn)
    @components.PasteBin()
}

templ NavLogin() {
    @components.Navbar(false)
    @components.Login()
}