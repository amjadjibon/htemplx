package pages

import (
    "htemplx/app/views/components"
    "htemplx/app/views/layouts"
)

templ Index(loggedIn bool, title string) {
    @layouts.Base(title) {
        @components.Navbar()
        if loggedIn {
            @components.PasteBin()
        } else {
            @components.Login()
        }
        @components.NewsLetter()
        @components.Footer()
    }
}
